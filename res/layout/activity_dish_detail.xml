<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp" >
    
    <TextView android:id="@+id/CategoryView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:enabled="false"
        style="@style/FontStyleNormalGrayBiger"/>
    
    
    <TextView android:id="@+id/DishNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:enabled="false"
        style="@style/FontStyleNormalBlackLarger" />
    
    <TextView android:id="@+id/DishCharactorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:enabled="false"
        style="@style/FontStyleNormalBlackBig"/>   
    <TextView android:id="@+id/DishTastView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        style="@style/FontStyleNormalBlackBig"/>
    
    <TextView android:id="@+id/DishOriginView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:enabled="false"
        style="@style/FontStyleNormalBlackBig"/>
    
    <TextView android:id="@+id/DishRecomendationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:enabled="false"
        style="@style/FontStyleNormalBlackBig"/>

</LinearLayout>
