    </style>
    
    <style name="FontStyleNormalGrayMiddle" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff807e7a</item>
    </style>
    
