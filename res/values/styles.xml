<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
    
    <style name="DishDetailTheme" parent="AppBaseTheme">
         <item name="android:windowAnimationStyle">@style/DishDetail.Window</item>
    </style>
    
    
    
    <style name="DishDetail.Window" parent="@android:style/Animation.Activity">
      <item name="android:activityOpenEnterAnimation">@anim/activity_detail_in</item>
      <item name="android:activityOpenExitAnimation">@anim/activity_detail_hold</item>
      <item name="android:activityCloseEnterAnimation">@anim/activity_detail_hold</item>
      <item name="android:activityCloseExitAnimation">@anim/activity_detail_out</item>
    </style>
    
        <style name="FontStyleNormalGraySmall" parent="@android:style/TextAppearance">
